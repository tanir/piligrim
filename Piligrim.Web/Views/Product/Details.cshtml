@model ProductDetailsViewModel
<div class="container-fluid product-details">
    <div class="row">
        <div class="col-sm-6">
            <div class="container-fluid">
                <div class="row">
                    <div class="fotorama" data-nav="thumbs">
                        <img src="@Model.Thumbnail" alt="@Model.Title"/>

                        @foreach (var photo in Model.Photos)
                        {
                            <img src="@photo" alt="@Model.Title" />
                        }
                    </div>
                </div>
                <div class="row">
                    <h3>Описание</h3>
                    <p>
                        @Model.Description
                    </p>
                </div>
            </div>
        </div>
        <div class="col-sm-6">

            <h1>@Model.Title</h1>
            <h2><span class="label label-danger">@Model.Price.ToString("G") <span class="fa fa-rub"></span></span></h2>

            <form class="form-horizontal product-form">
                <input type="hidden" data-field="thumbnail" data-value="@Model.Thumbnail" />
                <input type="hidden" data-field="id" data-value="@Model.Id" />
                <input type="hidden" data-field="price" data-value="@Model.Price" />
                <input type="hidden" data-field="title" data-value="@Model.Title" />
                <div class="form-group">
                    <label class="control-label col-sm-4 text-left">Размер</label>
                    <div class="col-sm-8">
                        <div class="btn-group picker" data-field="size">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <span class="picker-title">Выберите размер</span> <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                @foreach (var size in Model.Sizes)
                                {
                                    <li><a href="#">@size</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Цвет</label>
                    <div class="col-sm-8">
                        <div class="btn-group picker" data-field="color">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <span class="picker-title">Выберите цвет</span> <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                @foreach (var color in Model.Colors)
                                {
                                    <li><a href="#">@color</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Количество</label>
                    <div class="col-sm-8">
                        <div class="input-group count-picker" data-value="1" data-field="count">
                            <span class="input-group-addon btn" data-increment="-1"><span class="glyphicon glyphicon-minus"></span> </span>
                            <input type="text" class="form-control" value="1"/>
                            <span class="input-group-addon btn" data-increment="1"><span class="glyphicon glyphicon-plus"></span></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-10">
                        <button type="submit" class="btn btn-danger btn-lg">Добавить в корзину</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section head
{
    <script src="~/js/details.js" asp-append-version="true"></script>
}