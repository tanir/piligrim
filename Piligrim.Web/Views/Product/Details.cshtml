
@model ProductDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}
<div class="container-fluid product-details">
    <div class="row">
        <div class="col-sm-6">
            <div class="container-fluid">
                <div class="row">
                    <div class="fotorama" data-nav="thumbs">
                        <img src="@Model.Thumbnail" alt="@Model.Title" />

                        @foreach (var photo in Model.Photos)
                        {
                            <img src="@photo" alt="@Model.Title" />
                        }
                    </div>
                </div>
                <div class="row">
                    <h3>Описание</h3>
                    <p>
                        @Model.Description
                    </p>
                </div>
            </div>
        </div>
        <div class="col-sm-6">

            <h1>@Model.Title</h1>
            <h2><span class="label label-danger">@Model.Price.ToString("G") <span class="fa fa-rub"></span></span></h2>

            <form class="form-horizontal" data-bind="submit: addOrderItem">
                <input type="hidden" name="thumbnail" value="@Model.Thumbnail" />
                <input type="hidden" name="id" value="@Model.Id" />
                <input type="hidden" name="price" value="@Model.Price" />
                <input type="hidden" name="title" value="@Model.Title" />
                <div class="form-group">
                    <label class="control-label col-sm-4 text-left">Размер</label>
                    <div class="col-sm-6">
                        <select class="form-control" data-bind="value: size">
                            <option disabled selected>Выберите размер</option>
                            @foreach (var size in Model.Sizes)
                            {
                                <option value="@size">@size</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Цвет</label>
                    <div class="col-sm-6">
                        <select class="form-control" data-bind="value: color">
                            <option disabled selected>Выберите цвет</option>
                            @foreach (var color in Model.Colors)
                            {
                                <option value="@color">@color</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Количество</label>
                    <div class="col-sm-8">
                        <div class="input-group icrementer">
                            <span class="input-group-addon btn" data-bind="click: function(){changeCount(-1)}"><span class="glyphicon glyphicon-minus"></span> </span>
                            <input type="text" class="form-control" data-bind="value: count" />
                            <span class="input-group-addon btn" data-bind="click: function(){changeCount(1)}"><span class="glyphicon glyphicon-plus"></span></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-10">
                        <button type="submit" class="btn btn-danger btn-lg">Добавить в корзину</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section head
{
    <script src="~/js/details.js" asp-append-version="true"></script>
}